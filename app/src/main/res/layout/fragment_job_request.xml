<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/job_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/address"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/job_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_job_address" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/job_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/job_type"
            android:gravity="bottom"
            android:text="@string/job_type"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/job_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/job_address"
            android:layout_toRightOf="@id/job_type_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/requested_completion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_type"
            android:layout_alignBottom="@id/requested_completion"
            android:gravity="bottom"
            android:text="@string/requested_completion_date"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/requested_completion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_type"
            android:layout_toRightOf="@id/requested_completion_title"
            android:hint="@string/enter_a_date"
            android:inputType="datetime" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subtotal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Subtotal"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtotal_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$50.00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tax_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Priority Fee"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tax_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$5.00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Total"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$55.00" />
    </LinearLayout>

    <Button
        android:id="@+id/request_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#BC69F04A"
        android:text="@string/request_job"
        android:textAlignment="center" />
</LinearLayout>